@model MVC_Training1.ViewModel.FlowerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Task 21: Flower List</h2>
@using (Html.BeginForm("Details", "Flower"))
{
    <div>
        <div class="row">
            <div class="col-md-6">
                @for (int i = 0; i < Model.Flowers.Count / 2; i++)
                {
                    <div class="radio">
                        <label>
                            @Html.RadioButtonFor(m => m.SelectedFlower, Model.Flowers[i].Name, new { @class = "radio-inline" }) @Model.Flowers[i].Name
                        </label>
                    </div>
                }
            </div>
            <div class="col-md-6">
                @for (int i = Model.Flowers.Count / 2; i < Model.Flowers.Count; i++)
                {
                    <div class="radio">
                        <label>
                            @Html.RadioButtonFor(m => m.SelectedFlower, Model.Flowers[i].Name, new { @class = "radio-inline" }) @Model.Flowers[i].Name
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
